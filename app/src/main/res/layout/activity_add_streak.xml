<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.danthecodinggui.streak.View.EditStreakActivity"
    android:orientation="vertical"
    android:transitionName="@string/transition_edit_streak">

    <android.support.v7.widget.Toolbar
        android:id="@+id/tbar_edit_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:theme="@style/EditStreakToolbarTheme"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <EditText
            android:id="@+id/editStreak"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:ems="10"
            android:inputType="textMultiLine"
            android:gravity="top"
            android:layout_weight="1"
            android:layout_margin="20dp"
            android:background="@android:color/transparent"/>

    </LinearLayout>


</LinearLayout>
